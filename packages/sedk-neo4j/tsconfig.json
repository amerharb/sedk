{
  "compilerOptions": {
    "rootDir": "./",
    "declaration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": false,
    "strictFunctionTypes": true
  },
  "lib": [
    "es2015",
  ],
  "include": [
    "**/*.ts",
  ]
}
