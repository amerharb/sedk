{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": false,
    "strictFunctionTypes": true,
    "removeComments": false,
    "paths": {
      "sedk-postgres": ["./src/index.ts"],
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"],
    },
  },
  "lib": [
    "es2015"
  ]
}
