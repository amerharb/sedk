{
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "isolatedModules": true,
    "experimentalDecorators": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": false,
    "strictFunctionTypes": true,
    "removeComments": false,
  },
  "exclude": [
    "examples/deno/**/*",
  ],
  "lib": [
    "es2015"
  ]
}
