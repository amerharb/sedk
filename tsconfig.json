{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": false,
    "strictFunctionTypes": true,
    "paths": {
      "src": ["./src"],
      "Non-Exported/*": ["./src/*"],
      "test/*": ["./test/*"],
    }
  },
  "lib": [
    "es2015"
  ]
}
